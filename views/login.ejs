<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header') -%>

   <body id="page-top">
      <!-- Navigation-->
      <%- include('layouts/navbar') -%>
         <!-- Contact-->
         <section class="page-section loginImg" id="contact">
            <div class="container px-4 px-lg-5">
               <div class="row gx-4 gx-lg-5 justify-content-center">
                  <div class="col-lg-8 col-xl-6 text-center">
                     <h2 class="mt-0 fontStyle">Log In</h2>
                     <hr class="divider" />
                  </div>
               </div>

               <div class="row gx-4 gx-lg-5 justify-content-center mb-5">
                  <div class="col-lg-6">
                     <!-- enctype="multipart/form-data" -->
                     <form class="space_bottom_login" action="/users/login" method="POST" id="contactForm">
                        <% if(message) { %>
                           <div class="errorSection">
                               <span id="errorMessage"><%- message %></span>
                           </div>
                         <% } %>
                        <!-- Username input-->
                        <div class="form-floating mb-3">
                           <input class="form-control" id="username" name="username" type="text"
                              placeholder="Enter your username..." data-sb-validations="required" />
                           <label class="allLabels" for="username">User Name</label>
                           <div class="invalid-feedback" data-sb-feedback="name:required">A Username is required.</div>
                        </div>

                        <!-- Password input-->
                        <div class="form-floating mb-3">
                           <input class="form-control" id="password" name="password" type="password"
                              placeholder="name@example.com" data-sb-validations="required,password" />
                           <label class="allLabels" for="password">Password</label>
                           <div class="invalid-feedback" data-sb-feedback="password:required">A password is required.
                           </div>
                        </div>

                        <!-- Submit Button-->
                        <div class="d-grid">
                           <button class="btn btn-primary btn-xl btn-size" id="submitButton" type="submit">Login</button>
                        </div>
                     </form>

                  </div>
               </div>
            </div>
         </section>

         <!-- Footer-->
         <%- include('layouts/footer') -%>

            <!-- scripts -->
            <%- include('layouts/scripts') -%>
   </body>

</html>